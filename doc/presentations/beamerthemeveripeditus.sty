 \hfill%
 \insertdate%
 \hspace*{3mm}%
}%

\setbeamertemplate{footline}{%
 \ifnum \insertpagenumber = 1%
  \mbox{\phantom{\veripeditusbgimg{trim=0 0 0 550}}}%

